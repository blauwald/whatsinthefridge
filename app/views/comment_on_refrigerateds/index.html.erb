<div class="page-header">
  <h1>
    Comment on refrigerateds
    <a href="/comment_on_refrigerateds/new" class="btn btn-lg btn-success">New Comment on refrigerated</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Body</th>
        <th>Refrigerated</th>
        <th>Actions</th>
      </tr>

      <% @comment_on_refrigerateds.each do |comment_on_refrigerated| %>
      <tr>
        <td><%= comment_on_refrigerated.user_id %></td>
        <td><%= comment_on_refrigerated.body %></td>
        <td><%= comment_on_refrigerated.refrigerated_id %></td>
        <td>
          <a href="/comment_on_refrigerateds/<%= comment_on_refrigerated.id %>" class="btn btn-primary">Show</a>
          <a href="/comment_on_refrigerateds/<%= comment_on_refrigerated.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_comment_on_refrigerated/<%= comment_on_refrigerated.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
