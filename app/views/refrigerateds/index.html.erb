<div class="page-header">
  <h1>
    Refrigerated Groceries
    <a href="/refrigerateds/new" class="btn btn-lg btn-success">add new</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Purchase date</th>
        <th>Experation date</th>
        <th>Who bought this</th>
        <th>Status</th>
        <th>comments</th>
        <th>Actions</th>
      </tr>

      <% @refrigerateds.each do |refrigerated| %>
      <tr>
        <td><%= refrigerated.image_of_grocery %></td>
        <td><%= refrigerated.grocery_name %></td>
        <td><%= refrigerated.date_of_purchase %></td>
        <td><%= refrigerated.date_of_experation %></td>
        <td><%= refrigerated.user_id %></td>
        <td>
          <% if Date.today > refrigerated.date_of_experation%>
          <a class="btn btn-danger">bad</a>
          <% else %>
          <a class="btn btn-primary">good</a>
          <% end %>
        </td>

        <td>
          <a href="/comment_on_refrigerateds/index" class="btn btn-default">view</a>
        </td>
        <td>
          <a href="/refrigerateds/<%= refrigerated.id %>" class="btn btn-default">Show</a>
          <% if current_user.id == refrigerated.user_id %>
          <a href="/refrigerateds/<%= refrigerated.id %>/edit" class="btn btn-default">Edit</a>
          <a href="/delete_refrigerated/<%= refrigerated.id %>" class="btn btn-default" rel="nofollow">Delete</a>
          <% end %>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
